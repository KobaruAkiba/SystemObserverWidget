		"cpx": "^1.5.0",
		"eslint": "^9.25.1",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-prettier": "^5.2.6",
		"prettier": "^3.5.3",
		"@kobaru/eslint-prettier-config": "file:../eslint-prettier-config"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"electron": "^36.0.0",
