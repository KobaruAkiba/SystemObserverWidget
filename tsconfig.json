{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@kobaru/eslint-prettier-config": [
        "node_modules/@kobaru/eslint-prettier-config"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}
