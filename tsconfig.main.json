{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"moduleResolution": "node",
		"lib": ["DOM", "ESNext"],
		"outDir": "dist",
		"rootDir": "src",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"baseUrl": ".",
		"paths": {
			"@kobaru/eslint-prettier-config": ["node_modules/@kobaru/eslint-prettier-config"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "src/renderer.ts", "src/Components/**/*"]
}
